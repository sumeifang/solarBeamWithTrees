FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0/air";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform ( 0.1 0 0 );

boundaryField
{
	/*window_inlet
    {
        type            fixedValue;
        value           uniform (0 0 0);
		phi             phi;
    }
*/
	window_outlet
    {
        type            pressureInletOutletVelocity;
        value           uniform (0 0 0);
        phi             phi;
    }

		window_inlet
    {
		type            mappedField;
		sampleMode      nearestPatchFace;
		samplePatch 	window_inlet;
		sampleRegion    domain1;
		//offsetMode 		uniform;
		//offset  		(0 0 0);
		//interpolationScheme  cell;
        field           U;              // optional field name
        setAverage      no;             // apply an average value
        average         0;              // average to apply if setAverage
        value          uniform (0 0 0);		// place holder
    }
	
    glass
    {
        type            noSlip;
    }
    atrium_to_building
    {
        type            noSlip;
    }
	    atrium_to_domain1
    {
        type            noSlip;
    }
	atrium_to_floor
    {
        type            noSlip;
    }

}


