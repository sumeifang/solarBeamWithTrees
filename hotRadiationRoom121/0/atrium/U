FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    location    "0/air";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [ 0 1 -1 0 0 0 0 ];

internalField   uniform ( 0.1 0 0 );

boundaryField
{
    atrium_to_building
    {
        type            fixedValue;
        value           uniform ( 0 0 0 );
        phi             phi;
    }
	    atrium_to_domain1
    {
        type            fixedValue;
        value           uniform ( 0 0 0 );
        phi             phi;
    }
	atrium_to_floor
    {
        type            fixedValue;
        value           uniform ( 0 0 0 );
        phi             phi;
    }
	window
    {
		type            mappedField;
		sampleMode      nearestPatchFace;
		samplePatch 	window;
		sampleRegion    domain1;
		//offsetMode 		uniform;
		//offset  		(0 0 0);
		//interpolationScheme  cell;
        field           U;              // optional field name
        setAverage      no;             // apply an average value
        average         0;              // average to apply if setAverage
        value           uniform  (0 0 0);		// place holder
		        phi             phi;
		//inletValue      uniform  0;
		//Prt             0.85; 
    }
}


