FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      snappyHexMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#includeEtc "caseDicts/mesh/generation/snappyHexMeshDict.cfg"

castellatedMesh on;
snap            on;
addLayers       off;//边界层

geometry
{
    atrium.stl//替换成自己的模型名称
    {
        type triSurfaceMesh;
        name  atrium;//替换成自己的模型名称
    }
	building.stl//替换成自己的模型名称
    {
        type triSurfaceMesh;
        name  building;//替换成自己的模型名称
    }
	window.stl//替换成自己的模型名称的模型名称
    {
        type triSurfaceMesh;
        name  window;//替换成自己的模型名称
    }

    refinementBox
    {
        type searchableBox;
        min  ( 0  0  10);
        max  (10  10  20);
    }//代表更细腻的网格范围，加密小汽车周围的网格
};

castellatedMeshControls
{
   features
    (
      { file  "atrium.eMesh"; level 1; }
	  { file  "building.eMesh"; level 1; }
	  	  { file  "window.eMesh"; level 1; }
    );//修改成自己的文件名

    refinementSurfaces
    {
        atrium
        {
            level (2 2);
			faceZone atrium;
			cellZone atrium;
			cellZoneInside inside;
           //patchInfo { type wall; }
		   //boundary internal;
        }
		building
        {
            level (2 2);
			faceZone building;
			cellZone building;
			cellZoneInside inside;
           //patchInfo { type wall; }
		   //boundary internal;
        }
		window
        {
            level (2 2);
			//faceZone window;
			//cellZone window;
			//cellZoneInside inside;
           patchInfo { type patch; }
		   //boundary internal;
        }
    }

    refinementRegions
    {
        refinementBox
        {
            mode inside;
            levels ((1 2));
        }
    }

    locationInMesh (200  100  0);//在小汽车外面找一个点坐标，坐标值不唯一，只需落在小汽车外部，流场内部即可
}

snapControls
{
    explicitFeatureSnap    true;
    implicitFeatureSnap    true;
}
/*
